[ssh-login-monitor]
enabled = true
filter = ssh-login-monitor
action = ssh-login-logger

# 关键：设置为1，检测到一次就触发
maxretry = 1
bantime = 10
findtime = 10

# 日志路径
logpath = /var/log/auth.log
        /var/log/secure
port = ssh
protocol = tcp

#这里需要加上，会覆盖所有对ignoreip的设置，因为我们需要拿到登录信息，不能让fail2ban直接过滤掉了
ignoreip =

